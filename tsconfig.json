{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2021",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "isolatedModules": true,
    "lib": [
      "ES2021"
    ],
    "resolveJsonModule": true,
    "types": [
      "@cloudflare/workers-types",
      "mocha"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}